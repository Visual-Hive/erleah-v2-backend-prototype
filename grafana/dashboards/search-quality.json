{
  "dashboard": {
    "title": "Assistant - Search Quality",
    "uid": "assistant-search-quality",
    "tags": ["assistant", "search"],
    "timezone": "browser",
    "refresh": "30s",
    "time": { "from": "now-1h", "to": "now" },
    "panels": [
      {
        "id": 1,
        "title": "Avg Match Score",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(assistant_faceted_search_score_bucket[5m]))",
            "legendFormat": "median score"
          }
        ],
        "fieldConfig": {
          "defaults": { "thresholds": { "steps": [
            { "color": "red", "value": null },
            { "color": "yellow", "value": 5 },
            { "color": "green", "value": 7 }
          ]}}
        }
      },
      {
        "id": 2,
        "title": "Zero Result Rate",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "sum(rate(assistant_search_results_bucket{le=\"0\"}[5m])) / sum(rate(assistant_search_results_count[5m])) * 100",
            "legendFormat": "zero %"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "percent", "thresholds": { "steps": [
            { "color": "green", "value": null },
            { "color": "yellow", "value": 10 },
            { "color": "red", "value": 20 }
          ]}}
        }
      },
      {
        "id": 3,
        "title": "Avg Facets Matched",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(assistant_facets_matched_bucket[5m]))",
            "legendFormat": "median facets"
          }
        ]
      },
      {
        "id": 4,
        "title": "Search Duration (p95)",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(assistant_faceted_search_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "s" }
        }
      },
      {
        "id": 5,
        "title": "Score Distribution",
        "type": "histogram",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
        "targets": [
          {
            "expr": "sum(increase(assistant_faceted_search_score_bucket[5m])) by (le)",
            "legendFormat": "{{le}}",
            "format": "heatmap"
          }
        ]
      },
      {
        "id": 6,
        "title": "Results Count by Table",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(assistant_search_results_bucket[5m]))",
            "legendFormat": "{{table}} ({{mode}})"
          }
        ]
      },
      {
        "id": 7,
        "title": "Search Duration by Entity Type",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(assistant_faceted_search_duration_seconds_bucket[5m])) by (entity_type, le))",
            "legendFormat": "{{entity_type}} p95"
          },
          {
            "expr": "histogram_quantile(0.5, sum(rate(assistant_faceted_search_duration_seconds_bucket[5m])) by (entity_type, le))",
            "legendFormat": "{{entity_type}} p50"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "s" }
        }
      },
      {
        "id": 8,
        "title": "Facet Pair Similarity",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum(rate(assistant_facet_pair_similarity_bucket[5m])) by (facet_key, le))",
            "legendFormat": "{{facet_key}}"
          }
        ]
      },
      {
        "id": 9,
        "title": "User Satisfaction Distribution",
        "type": "histogram",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
        "targets": [
          {
            "expr": "sum(increase(assistant_user_satisfaction_bucket[1h])) by (le)",
            "legendFormat": "{{le}}",
            "format": "heatmap"
          }
        ]
      },
      {
        "id": 10,
        "title": "Time to First Feedback / Chunk",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(assistant_time_to_first_feedback_seconds_bucket[5m]))",
            "legendFormat": "first feedback p95"
          },
          {
            "expr": "histogram_quantile(0.95, rate(assistant_time_to_first_chunk_seconds_bucket[5m]))",
            "legendFormat": "first chunk p95"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "s" }
        }
      }
    ]
  }
}
